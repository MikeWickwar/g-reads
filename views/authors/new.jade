extends ../layout

block content
  .row-flow
    +sideNav()
  .row-flow.centerme
    .col-md-6.col-sm-12
      if errors
        for error in errors
          h4.error= error
      form(action="/authors" method="post")
        div.form-group
          label(for="first_name") First Name
          input.form-control(type="text" id="first_name" placeholder="First Name" name="first_name")
          label(for="last_name") Last Name
          input.form-control(type="text" id="last_name" placeholder="Last Name" name="last_name")
          label(for="portrait_url") Portrait Url
          input.form-control(type="text" id="portrait_url" placeholder="Portrait Url " name="portrait_url")
          label(for="bio") Biography
          input.form-control(type="text" id="bio" placeholder="bio..." name="bio")
          label(for="author_id") Books...
          select.form-control(id="author_id" name="author_id" type="multiple")
            option(value= " ")
            for book in books
              option(value= book.id) #{book.title}
        button.btn.btn-primary(type="submit") Add Author
